<html>
  <head>
    <title>Log in page</title>
  </head>
  <body>
    <h1>Log in</h1>
    <form method="POST">
      Email: <br/>
      <input type="text" name="email"/> <br/>
      Password: <br/>
      <input type="password" name="password"/> <br/>
      <button type="submit">Log in</button>
    </form>
    <%if (message) { %>
      <font color="red"><%= message %><p></font>
    <% } %>
  </body>
</html>
